<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/allcss")
    @if (IsSectionDefined("Css"))
    {
        @RenderSection("Css")
    }
    <link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet">
</head>
<body class="bg-light">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ajax")
    @Scripts.Render("~/bundles/bootstrap")
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts")
    }
    <nav class="navbar navbar-expand-lg navbar-light bg-warning">
        <a class="navbar-brand" href="#">Препод менеджер</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ShowSubjects", "Profile")">Мои предметы</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AddGrade", "Profile")">Выставить оценку</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ChangePassword", "Account")">Настройки</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">Выход</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>